rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ TEMPORARY RULES FOR INITIAL DATA SEEDING
    // Use these rules to seed your database with courses and create initial users
    // After seeding is complete, switch back to firestore.rules
    
    // Allow all reads and writes for authenticated users
    // This is ONLY for initial setup - NOT for production!
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
